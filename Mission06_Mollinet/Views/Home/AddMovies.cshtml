@{
    ViewData["Title"] = "Add Movies";
}

@model Application

    <form method="post">
        <div>
            <label asp-for="Category">Category:</label>
            <input type="text" id="category" name="category" required asp-for="Category">
        </div>
        <div>
            <label asp-for="Title">Title:</label>
            <input type="text" id="title" name="title" required asp-for="Title">
        </div>
        <div>
            <label asp-for="Year">Year:</label>
            <input type="number" id="year" name="year" required min="1800" max="2099" asp-for="Year">
        </div>
        <div>
            <label asp-for="Director">Director:</label>
            <input type="text" id="director" name="director" required asp-for="Director">
        </div>
        <div>
            <label asp-for="Rating">Rating:</label>
            <select id="rating" name="rating" required asp-for="Rating">
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
        </div>
        <div>
            <label asp-for="Edited">Edited:</label>
            <select id="edited" asp-for="Edited">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>
        <div>
            <label asp-for="LentTo">Lent To:</label>
            <input type="text" id="lentTo" name="lentTo" asp-for="LentTo">
        </div>
        <div>
            <label asp-for="Notes">Notes:</label>
            <input type="text" id="notes" name="notes" maxlength="25" asp-for="Notes">
        </div>
        <div>
            <button type="submit">Submit</button>
        </div>
    </form>
