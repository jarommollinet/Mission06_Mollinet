@{
    ViewData["Title"] = "Add Movies";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Movie Collection Form</title>
</head>
<body>

    <form action="/submit-url" method="post">
        <div>
            <label for="category">Category:</label>
            <input type="text" id="category" name="category" required>
        </div>
        <div>
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" required>
        </div>
        <div>
            <label for="year">Year:</label>
            <input type="number" id="year" name="year" required min="1800" max="2099">
        </div>
        <div>
            <label for="director">Director:</label>
            <input type="text" id="director" name="director" required>
        </div>
        <div>
            <label for="rating">Rating:</label>
            <select id="rating" name="rating" required>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
        </div>
        <div>
            <label>Edited:</label>
            <input type="radio" id="edited_yes" name="edited" value="true"><label for="edited_yes">Yes</label>
            <input type="radio" id="edited_no" name="edited" value="false" checked><label for="edited_no">No</label>
        </div>
        <div>
            <label for="lentTo">Lent To:</label>
            <input type="text" id="lentTo" name="lentTo">
        </div>
        <div>
            <label for="notes">Notes:</label>
            <input type="text" id="notes" name="notes" maxlength="25">
        </div>
        <div>
            <button type="submit">Submit</button>
        </div>
    </form>

</body>
</html>
